<Window x:Class="Activer.VersionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Width="250" Height="80"
        Topmost="True"
        ShowInTaskbar="False"
        Opacity="0"
        ResizeMode="NoResize">

    <Border CornerRadius="8" Background="#AAFFFFFF" Padding="10">
        <StackPanel>
            <TextBlock x:Name="VersionText" Text="Activer v1.0" 
                       FontSize="16" FontWeight="Bold" Foreground="Black" TextAlignment="Center"/>
            <TextBlock x:Name="AuthorText" Text="Author: Eos Lolan" 
                       FontSize="14" Foreground="Black" TextAlignment="Center"/>
            <TextBlock x:Name="CopyrightText" Text="© 2025 Eos Lolan. All rights reserved." 
                       FontSize="14" Foreground="Black" TextAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>
